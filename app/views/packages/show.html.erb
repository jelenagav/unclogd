<ul style="padding-top: 100px">
  <% @package.items.each do |item| %>
    <li>
      <%= render 'items/item', { item: item } %>
    </li>
  <% end %>
</ul>

<% if @number_package >= 2 && @existing_order.nil? %>
  <%= simple_form_for @new_order do |f| -%>
    <%= f.hidden_field :package_id %>
    <%= f.button :submit, "order package" %>
  <% end %>
<% end -%>

<% if @existing_order %>
  <%= link_to "Delete", order_path(@existing_order),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
<% end %>
